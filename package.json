        "generate-docs": "jsdoc -c jsdoc.conf",
        "view-docs": "http-server ./api-docs/ --gzip -o -p 8182",
        "test": "karma start karma.conf.js",
        "view-test": "opener test_result/report.html",
        "wiki": "http-server ./wiki/_book/ --gzip -o -p 8183",
